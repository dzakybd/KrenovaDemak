<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.baddude.krenovademak.activity.SigninActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logocolor" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="10dp"
            android:text="{cmd-email} Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/colorTextPrimary"
            android:id="@+id/fieldemail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />
        <TextView
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="10dp"
            android:text="{cmd-lock} Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/colorTextPrimary"
            android:id="@+id/fieldpassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:onClick="masukclick"
        android:id="@+id/buttonmasuk"
        android:layout_marginTop="10dp"
        android:text="Masuk"
        android:textColor="@color/colorWhite"
        android:background="@drawable/buttonback"
        android:layout_width="190dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_marginTop="30dp"
        android:textColor="@color/colorTextPrimary"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum punya akun?" />

    <TextView
        android:onClick="daftarclick"
        android:id="@+id/buttondaftar"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAFTAR" />



</LinearLayout>
