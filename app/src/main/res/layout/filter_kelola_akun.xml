<LinearLayout android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="10dp"
            android:text="{cmd-account} Nama / Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/colorTextPrimary"
            android:id="@+id/fieldnama"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nama / Email"
            android:inputType="text" />
        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/checkadmin"
            android:textColor="@color/colorTextPrimary"
            android:text="Akun admin"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/checkblock"
            android:textColor="@color/colorTextPrimary"
            android:text="Akun diblokir"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="10dp"
            android:text="{cmd-sort} Urutkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:textColor="@color/colorTextPrimary"
            android:id="@+id/spinnerurut"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>
